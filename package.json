{
  "name": "textarea-editor",
  "version": "1.0.1",
  "description": "Simple markdown editor for textareas",
  "main": "build/index.js",
  "scripts": {
    "build": "babel -d build index.js",
    "watch": "watchify example/index.js -o example/bundle.js -dv",
    "serve": "ecstatic -p 3000 example",
    "start": "npm run serve & npm run watch",
    "test": "mochify -R spec",
    "prepublish": "npm run build"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eivindfjeldstad/textarea-editor.git"
  },
  "keywords": [
    "textarea",
    "markdown",
    "editor"
  ],
  "author": "Eivind Fjeldstad <eivind.fjeldstad@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eivindfjeldstad/textarea-editor/issues"
  },
  "homepage": "https://github.com/eivindfjeldstad/textarea-editor#readme",
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.0",
    "chai": "^4.1.2",
    "ecstatic": "^3.2.0",
    "mochify": "^5.6.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "escape-string-regexp": "^1.0.5"
  },
  "files": [
    "build"
  ]
}
